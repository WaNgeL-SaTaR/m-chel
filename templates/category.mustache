<div class="page-header shadow">
  <h2>
    {{catTitle}}
  </h2>
  {{{catContent}}}
</div>


<ul class="breadcrumb">
  <li><a href="#!/category/{{catName}}/tag/*/page/0">всё</a> <span class="divider">/</span></li>
  {{#tags}}
  <li><a href="#!/category/{{../catName}}/tag/{{.}}/page/0">{{.}}</a> <span class="divider">/</span></li>
  {{/tags}}
</ul>

<div>
