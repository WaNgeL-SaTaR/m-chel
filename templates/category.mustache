  <table class="table table-striped table-condensed">
    <thead>
      <tr>
	    <th>Наименование</th>
	    <th>Описание</th>
	    <th>Цена</th>
	    <th>Метки</th>
      </tr>
    </thead>
    <tbody>


      {{#items}}
      <tr>
	<td>
	  {{ title }}
	</td>
	<td>
	  {{ description }}
	</td>
	<td>
	  {{ cost }}
	</td>
	<td>
